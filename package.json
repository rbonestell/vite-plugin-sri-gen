{
  "name": "vite-plugin-sri-gen",
  "version": "1.0.0",
  "description": "A Vite plugin to autgenerate subresource integrity hashes.",
  "type": "module",
  "types": "./src/index.d.ts",
  "exports": "./src/index.js",
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest run --coverage --coverage.reporter=text --coverage.reporter=html --coverage.reporter=lcov",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "files": [
    "src/**",
    "README.md",
    "LICENSE*"
  ],
  "keywords": [
    "vite",
    "subresource",
    "integrity",
    "sri",
    "content",
    "security",
    "policy",
    "csp",
    "plugin"
  ],
  "author": {
    "name": "Bobby Bonestell",
    "url": "https://rbonestell.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "peerDependencies": {
    "vite": ">=4.0.0"
  },
  "dependencies": {
    "cheerio": "^1.1.2"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.32.0",
    "vitest": "^3.2.4"
  }
